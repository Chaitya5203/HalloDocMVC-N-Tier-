@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - halloDoc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/patientrequest.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        .nav-link.active, .nav-link:hover {
            color: #0dcaf0 !important;
            border-bottom: 3px solid #0dcaf0;
        }
    </style>
</head>
<body>
    <nav class="bg-white">
        <div class="container-fluid  shadow p-0" style="z-index:1060; padding-left :0px !important;">
            <ul class="sidebar" style="padding-left :0px !important;">
                <li>
                    <div class=" bg-transparent d-flex">
                        <button class="Logout1 btn showonmobile hide " data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><i class="fa-solid fa-bars" style="color: #54d4d3;"></i> </button>
                        <img src="~/OneDrive_2024-01-17/SRS Screen Shorts/backremovelogo.png" alt="" height="100px" width="180">
                    </div>
                </li>
                <li class="hideonmobile me-2">Welcome <b> @Accessor.HttpContext.Request.Cookies["Usarname"]</b></li>
                <li>
                    <a asp-action="Logout" asp-controller="Home">
                        <button class="btn hideonmobile me-2" style="border:2px solid #54d4d3; color: #54d4d3;">
                            Logout
                        </button>
                    </a>
                </li>
                <li>
                    <a>
                        <button class="btn showonmobile hide me-2" style="border:2px solid #54d4d3;">
                            <i class="fa-solid fa-arrow-right-from-bracket" style="color: #54d4d3;">
                            </i>
                        </button>
                    </a>
                </li>
                <li>
                    <button class="moonbtn backtra me-2" onclick="abc()"><i class="fa-solid fa-moon"></i></button>
                </li>
            </ul>
            <hr class="m-0" />
            <div class="navbar navbar-expand-md  navbar-light ">
                <div class="collapse navbar-collapse " id="myNavbar">
                    <ul class="navbar-nav ">
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="Dashboard" aria-current="page" asp-action="admindashboard" asp-controller="Admin">Dashboard</a>
                        </li>
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="ProviderLocation" asp-action="AdminProviderLocation" asp-controller="Admin">Provider Location</a>
                        </li>
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="profile" asp-action="AdminMyProfile" asp-controller="Admin">My Profile</a>
                        </li>
                        <div class="dropdown navbar-dropdown">
                            <button class="navbar-btn nav-item bg-white border-0 nav-link" type="button" id="provider" data-bs-toggle="dropdown" aria-expanded="false">
                                Providers
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="provider">
                                <li><a class="navbar-dropdown-item dropdown-item" asp-action="AdminProvider" asp-controller="Admin" id="providers">Provider</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">Scheduling</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">Invoicing</a></li>
                            </ul>
                        </div>
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="partners" asp-action="AdminPartner" asp-controller="Admin">Partners</a>
                        </li>
                        <div class="dropdown navbar-dropdown ms-1">
                            <button class="navbar-btn bg-white border-0 nav-link" type="button" id="access1" data-bs-toggle="dropdown" aria-expanded="false">
                                Access
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="access1">
                                <li><a class="navbar-dropdown-item dropdown-item" id="access" asp-action="AdminAccess" asp-controller="Admin">Account Access</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" asp-action="UserAccess" asp-controller="Admin">User Access</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" asp-action="CreateAdminAccount" asp-controller="Admin">Create Admin</a></li>
                            </ul>
                        </div>
                        <div class="dropdown navbar-dropdown ms-1">
                            <button class="navbar-btn bg-white border-0 nav-link" type="button" id="records" data-bs-toggle="dropdown" aria-expanded="false">
                                Records
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="records">
                                <li><a class="navbar-dropdown-item dropdown-item" id="records" asp-action="AdminRecord" asp-controller="Admin">Search Records</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">Email Logs</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">SMS Logs</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">Patient History</a></li>
                                <li><a class="navbar-dropdown-item dropdown-item" href="#">Block History</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="offcanvas offcanvas-start w-50 showonmobile hide " data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel" style="background-color: rgba(255, 255, 255,0.99);">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Welcome <strong>@Accessor.HttpContext.Request.Cookies["Usarname"]</strong></h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="offcanvasmenu p-2"><a id="dashboardnav" class="text-muted text-decoration-none">Dashboard</a></div>
            <div class="offcanvasmenu p-2"><a id="providerlocationnav" class="text-muted text-decoration-none">ProviderLocation</a></div>
            <div class="offcanvasmenu p-2"><a id="myprofilenav" class="text-muted text-decoration-none">My Profile</a></div>
            <div class="offcanvasmenu p-2"><a id="providernav" class="text-muted text-decoration-none">Providers</a></div>
            <div class="offcanvasmenu p-2"><a id="partnerdnav" class="text-muted text-decoration-none">Partners</a></div>
            <div class="offcanvasmenu p-2"><a id="accessnav" class="text-muted text-decoration-none">Access</a></div>
            <div class="offcanvasmenu p-2"><a id="recordnav" class="text-muted text-decoration-none">Records</a></div>
        </div>
    </div>
    <div>
        <main role="main" id="view123">
            @RenderBody()
        </main>
    </div>
    <script>
        var check;
        var id;
        var searchValue;
        var searchRegion;
        function navigationtab(e) {
            var id = e.id;
            switch (id) {
                case "profile":
                    e.classList.add("active");
                    window.location.href = "/Admin/AdminProviderLocation";
                    break;
            }
        }
        if (localStorage.getItem("theme") == null) {
            localStorage.setItem("theme", "light");
        }
        if (localStorage.getItem("theme") == "dark") {
            document.documentElement.setAttribute('data-bs-theme', 'dark')
        }
        function abc() {
            alert(localStorage.getItem("theme"));
            if (localStorage.getItem("theme") == "light") {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                localStorage.setItem("theme", "dark");
            }
            else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                alert();
                localStorage.setItem("theme", "light");
            }
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
