@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - halloDoc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/patientrequest.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        .nav-link.active, .nav-link:hover {
            color: #54d4d3 !important;
            border-bottom: 3px solid #54d4d3 !important
        }
    </style>
</head>

<body>
    <nav class="bg-white">
        <div class="container-fluid shadow p-0">
            <ul class="sidebar p-0">

                <li>
                    <div class=" bg-transparent d-flex">
                        <button class="Logout1 btn showonmobile hide " data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><i class="fa-solid fa-bars" style="color: #54d4d3;"></i> </button>
                        <a asp-action="PatientDashboard" asp-controller="Home"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/backremovelogo.png" alt="" height="100px" width="180"></a>
                    </div>
                    @* <span class="showonmobile hide">
                    <button class="Logout1 btn  " data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><i class="fa-solid fa-bars" style="color: #54d4d3;"></i> </button>
                    </span>
                    <img src="~/OneDrive_2024-01-17/SRS Screen Shorts/backremovelogo.png" alt="" height="100px" width="180"> *@
                </li>

                <li class="hideonmobile me-2">Welcome <b> @Accessor.HttpContext.Request.Cookies["Usarname"]</b></li>
                <li>
                    <a asp-controller="Home" asp-action="Logout">
                        <button class="btn hideonmobile me-2"
                                style="border:2px solid #54d4d3; color: #54d4d3;">
                            Logout
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="patientlogin">
                        <button class="btn showonmobile hide me-2"
                                style="border:2px solid #54d4d3;">
                            <i class="fa-solid fa-arrow-right-from-bracket"
                               style="color: #54d4d3;"></i>
                        </button>
                    </a>
                </li>
                <li><button class="moonbtn backtra me-2"><i class="fa-solid fa-moon  "></i></button></li>
            </ul>
            <hr class="m-0" />
            <div class="navbar navbar-expand-md  navbar-light ">

                <div class="collapse navbar-collapse " id="myNavbar">

                    <ul class="navbar-nav ">
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="Dashboard" aria-current="page" asp-action="patientdashboard" asp-controller="Home">Dashboard</a>
                        </li>
                        <li class="nav-item ms-1">
                            <a class="nav-link " id="Patientprofile" asp-action="Patientprofile" asp-controller="Home">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="offcanvas offcanvas-start w-50 showonmobile hide bg-light" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Welcome <strong>@Accessor.HttpContext.Request.Cookies["Usarname"]</strong></h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="offcanvasmenu p-2"><a id="dashboardnav" class="text-muted text-decoration-none">Dashboard</a></div>
            <div class="offcanvasmenu p-2"><a id="myprofilenav" class="text-muted text-decoration-none">Profile</a></div>
        </div>
    </div>
    <div>
        <main role="main" id="view123">
            @RenderBody()
        </main>
    </div>
    <script>
        
        function navigationtab(e) {
            var id = e.id;
            switch (id) {
                case "profile":
                    e.classList.add("active");
                    // console.log(e.classList);
                    window.location.href = "/Admin/AdminProviderLocation";
                    break;
            }
        }




        if (localStorage.getItem("theme") == null) {
            localStorage.setItem("theme", "light");
        }
        if (localStorage.getItem("theme") == "dark") {
            document.documentElement.setAttribute('data-bs-theme', 'dark')
        }
        function abc() {
            alert(localStorage.getItem("theme"));
            if (localStorage.getItem("theme") == "light") {

                document.documentElement.setAttribute('data-bs-theme', 'dark');
                localStorage.setItem("theme", "dark");
            }
            else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                alert();

                localStorage.setItem("theme", "light");
            }
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
